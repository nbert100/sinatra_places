  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Places</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    
    <div class="nav">
      <% if logged_in? %>
      <a href="/users/<%= current_user.id %>">Homepage</a>
      <a href="/places">Places We've Been</a>
      <a href="/places/new">Add a New Place</a>
      
      <% end %>
    </div>
    
    <div class="wrapper">
    <% if flash[:message] %>
    <h4><%= flash[:message] %></h4>
    <% end %>
    <% if flash[:error] %>
    <h4 style="color: red;"><%= flash[:error] %></h4>
    <% end %>
        <%= yield %>

      <footer class="branding">
         <% if logged_in? %>
        <a href="/logout">Log Out</a>
        <% end %>
        <small>&copy; 2019 <strong>Places</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
